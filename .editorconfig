# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.lua]
indent_style = tab
insert_final_newline = true

[*.txt]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.cfg]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.json]
indent_style = tab
indent_size = 2
insert_final_newline = false

[*.md]
indent_style = tab
indent_size = 2
insert_final_newline = false
